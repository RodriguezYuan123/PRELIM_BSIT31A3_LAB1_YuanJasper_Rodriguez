        Student maria = new Student();
        maria.Name = "Maria Santos";
        maria.Age = "20";
        maria.Course = "Web Systems";
        
        Student pedro = new Student();
        pedro.Name = "Pedro Ramirez";
        pedro.Age = "21";
        pedro.Course = "OOP";
        
        Student angelica = new Student();
        angelica.Name = "Angelica Reyes";
        angelica.Age = "22";
        angelica.Course = "DBMS";
